{
  "name": "codexmem",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "CodexMem MCP-compatible persistent memory service",
  "scripts": {
    "worker": "bun run src/worker/server.ts",
    "mcp": "bun run src/mcp/server.ts",
    "cli": "bun run src/cli/index.ts",
    "hook": "bun run src/cli/index.ts hook",
    "codex:auto-memory": "bun run src/cli/codex-bridge.ts",
    "dev": "bun run --hot src/worker/server.ts",
    "check": "bunx tsc --noEmit",
    "test": "bun test",
    "test:queue-recovery": "bun test tests/queue-recovery.test.ts",
    "test:hook-matrix": "bun test tests/hook-matrix.test.ts",
    "test:codex-bridge": "bun test tests/codex-bridge.test.ts",
    "test:sse": "bun test tests/sse.test.ts",
    "test:contract": "bun test tests/contract.test.ts",
    "test:mcp-e2e": "bun test tests/mcp-e2e.test.ts",
    "test:parity": "bun run scripts/parity-report.ts",
    "test:benchmark": "bun run scripts/benchmark.ts",
    "test:soak": "bun run scripts/soak.ts",
    "test:release-gate": "bun run scripts/release-gate.ts",
    "test:t4-release-workflow": "bun run scripts/t4-release-workflow.ts",
    "test:t2-convergence": "bun run scripts/t2-convergence.ts",
    "test:claudemem-live-parity": "bun run scripts/claudemem-live-parity.ts",
    "test:quality-replay": "bun run scripts/quality-replay.ts",
    "replay:events": "bun run scripts/replay-events.ts",
    "backfill:chroma": "bun run scripts/backfill-chroma.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "chromadb": "^3.3.0",
    "express": "^4.21.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.10.2",
    "bun-types": "^1.3.9",
    "typescript": "^5.7.2"
  }
}
